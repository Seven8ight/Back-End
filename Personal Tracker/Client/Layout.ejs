<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/9e14e23008.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cookie&family=Dancing+Script:wght@400..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Lobster+Two:ital,wght@0,400;0,700;1,400;1,700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Flex:opsz,wght@8..144,100..1000&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --liners-color: black;
        --icon-color: black;
        --border-color: black;
      }
      * {
        transition: all 0.5s ease-in-out;
      }
      body {
        background-color: #fffaf0;
      }
      body.dark {
        color: white;
        background: rgb(33, 32, 32);
      }
      header {
        margin: auto;
        width: 70vw;
        height: 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        top: 20px;
        border-bottom: 1px solid var(--border-color);
      }
      header > h1 {
        font-family: "Dancing Script", sans-serif;
        font-weight: lighter;
        font-size: 25px;
      }
      header > p {
        font-family: "Cookie", sans-serif;
        font-size: 20px;
      }
      header > button {
        border: none;
        font-size: 25px;
        background: none;
        margin-right: 10px;
        cursor: pointer;
      }
      header > button > i {
        color: var(--icon-color);
      }
      header > #accounts {
        position: absolute;
        right: -175px;
      }
      header > #accounts > button,
      header > #accounts > #options > button {
        background-color: transparent;
        font-size: 20px;
        border: none;
        cursor: pointer;
        color: var(--icon-color);
      }
      header > #accounts > #options {
        background: rgb(225, 225, 225);
        position: relative;
        right: 5px;
        top: 40px;
        width: 150px;
        box-shadow: 5px 5px 5px 0px rgba(150, 150, 150, 0.5);
        border-radius: 10px;
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 5px;
        transform: translateX(-100px);
        opacity: 0;
      }
      header > #accounts:hover > #options {
        opacity: 1;
        transform: translateX(0px);
      }
      header > #accounts > #options > button {
        font-size: 15px;
        width: 100%;
        text-align: left;
        border-radius: 10px;
      }
      header > #accounts > #options > button:hover {
        padding: 10px;
        box-shadow: 5px 5px 5px 5px rgba(100, 100, 100, 0.5);
        background-color: beige;
      }

      #intro {
        margin: auto;
        width: 70vw;
        height: 20vh;
        position: relative;
        top: 10px;
      }
      #intro h1 {
        font-family: "Dancing Script", sans-serif;
        font-size: 40px;
      }
      #intro > #greetings > #extra > p {
        font-family: "Roboto Flex", sans-serif;
      }
      #intro #header {
        width: 100%;
        font-family: "Cookie", sans-serif;
        font-size: 30px;
        text-align: center;
        width: 70vw;
        margin: 30px auto;
        position: relative;
      }
      #intro #greetings #extra {
        margin-left: 20px;
      }
      #intro #header::before {
        content: "";
        background-color: var(--liners-color);
        position: absolute;
        width: 40%;
        height: 1px;
        bottom: 50%;
        left: 4.8%;
      }
      #intro #header::after {
        content: "";
        background-color: var(--liners-color);
        position: absolute;
        width: 40%;
        height: 1px;
        bottom: 50%;
        right: 4.8%;
      }
      #articles {
        margin: auto;
        width: 70vw;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        position: relative;
        top: 70px;
      }
      #articles > #card {
        background: rgba(255, 255, 255, 0.01);
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        height: 450px;
        position: relative;
        cursor: pointer;
      }
      #articles > #card > #banner > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 15px;
        height: 450px;
      }
      #articles > #card > #text {
        padding: 10px;
        width: 94%;
        position: relative;
        bottom: 157px;
        background: linear-gradient(
          to bottom,
          transparent,
          rgba(50, 50, 50, 0.5)
        );
        border-radius: 15px;
      }
      #articles > #card:first-of-type {
        grid-column: 1/3;
        grid-row: 1/2;
      }
      #articles > #card:nth-of-type(4) {
        grid-column: 2/4;
        grid-row: 2/2;
      }
      #articles > #card:first-of-type > #text,
      #articles > #card:nth-of-type(4) > #text {
        width: 97%;
      }
      #articles > #card > #text > #info {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-end;
        color: white;
      }
      #articles > #card > #text > #info > h1 {
        font-family: "Lobster Two", sans-serif;
      }
      #articles > #card > #text > #info > p {
        font-family: "Cookie", sans-serif;
      }
      #articles > #card > #text > #content > p:last-of-type {
        font-family: "Roboto Flex", sans-serif;
        color: rgb(207, 206, 206);
      }
      #article {
        margin: auto;
        width: 70vw;
      }
      #add {
        width: 70vw;
        grid-row: 4/4;
        grid-column: 1/4;
        text-align: center;

        /* From https://css.glass
        background: rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3); */
      }
      #add > button {
        width: 100%;
        border: none;
        background: transparent;
        font-size: 25px;
        cursor: pointer;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-self: center;
      }
    </style>
    <title><%=title%></title>
  </head>
  <body>
    <nav>
      <header>
        <h1>InclyBlogs</h1>
        <p>Date here</p>
        <button id="theme"><i class="fa-solid fa-sun"></i></button>
        <div id="accounts">
          <button><i class="fa-solid fa-user-plus"></i></button>
          <div id="options">
            <button id="accountOption">Sign up</button>
            <button id="accountOption">Login</button>
          </div>
        </div>
      </header>
    </nav>
    <%- body %>
    <script>
      const dateTag = document.querySelector("header p"),
        date = new Date(),
        themeBtn = document.querySelector("nav header button"),
        addBtn = document.querySelector("#add button"),
        cards = document.querySelectorAll("#card"),
        accountBtns = document.querySelectorAll("#accountOption"),
        dayGetter = (dayNum) => {
          switch (dayNum + 1) {
            case 1:
              return "Sun";
            case 2:
              return "Mon";
            case 3:
              return "Tue";
            case 4:
              return "Wed";
            case 5:
              return "Thur";
            case 6:
              return "Fri";
            case 7:
              return "Sat";
          }
        },
        monthGetter = (monthNum) => {
          switch (monthNum + 1) {
            case 1:
              return "January";
            case 2:
              return "Februrary";
            case 3:
              return "March";
            case 4:
              return "April";
            case 5:
              return "May";
            case 6:
              return "June";
            case 7:
              return "July";
            case 8:
              return "August";
            case 9:
              return "September";
            case 10:
              return "October";
            case 11:
              return "November";
            case 12:
              return "December";
          }
        };

      addBtn.addEventListener("click", () => {
        window.location = "http://localhost:3000/article/new";
      });
      accountBtns.forEach((button) => {
        button.addEventListener(
          "click",
          () => (window.location = "http://localhost:3000/auth")
        );
      });

      dateTag.innerHTML = `${dayGetter(
        date.getDay()
      )}, ${date.getDate()} ${monthGetter(
        date.getMonth()
      )} ${date.getFullYear()}`;

      cards.forEach((card) => {
        card.addEventListener("click", () => {
          window.location = `http://localhost:3000/article/view/${card.className}`;
        });
      });

      themeBtn.addEventListener("click", () => {
        if (document.body.classList.contains("dark")) {
          document.body.classList.remove("dark");
          document.documentElement.style.setProperty("--liners-color", "black");
          document.documentElement.style.setProperty("--border-color", "black");
        } else {
          document.body.classList.add("dark");
          document.documentElement.style.setProperty("--liners-color", "white");
          document.documentElement.style.setProperty("--icon-color", "white");
          document.documentElement.style.setProperty("--border-color", "white");
        }
      });
    </script>
  </body>
</html>
